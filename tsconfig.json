{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["es2017", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"]
}
